<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:infra="clr-namespace:TataApp.Infrastructure;assembly=TataApp"
             x:Class="TataApp.App">
	<Application.Resources>
        <ResourceDictionary>
		<!-- Application resource dictionary -->
            <!-- Locator -->
            <infra:InstanceLocator x:Key="Locator"></infra:InstanceLocator>
            
            <!-- Color -->
            <Color x:Key="MainColor">#063355</Color>
            <Color x:Key="FontColor">#D4D5D2</Color>
            <Color x:Key="AccentColor1">#787461</Color>
            <Color x:Key="AccentColor2">#3A95CB</Color>
            <Color x:Key="BackgroundColor">#5C9BC3</Color>
            
            <!-- Menu colors -->
            <Color x:Key="MenuColor">#787461</Color>
            <Color x:Key="MenuFontColor">#5C9BC3</Color>

        </ResourceDictionary>
    </Application.Resources>
</Application>